<h1><%= @place.name %></h1>

<% @posts = Post.all%>

<h2>Posts</h2>

<% for post in @posts %>
<h3>
<%= post.title%>
</h3>
<%= post.posted_on%>
<p> <%=post.description%> </p>
<% end %>

<h3>
  <a href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</h3>

<h3>
<a href="/places">Back to Places</a>
</h3>